{
  "name": "pirate-radio",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "generate-playlists": "tsx scripts/generate-playlists.ts",
    "dev": "npm run generate-playlists && concurrently -n \"astro,bot\" -c \"cyan,magenta\" \"lsof -ti:4321 | xargs kill -9 2>/dev/null || true && astro dev\" \"npm run bot:local\"",
    "dev:astro": "lsof -ti:4321 | xargs kill -9 2>/dev/null || true && npm run generate-playlists && astro dev",
    "bot:local": "tsx scripts/test-bot-local.ts",
    "build": "npm run generate-playlists && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "setup-webhook": "bash scripts/setup-webhook.sh",
    "delete-webhook": "bash scripts/delete-webhook.sh",
    "upload-music": "tsx scripts/upload-to-dreamhost.ts",
    "test": "vitest"
  },
  "dependencies": {
    "@astrojs/react": "^4.4.2",
    "@astrojs/vercel": "^9.0.1",
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "@vercel/analytics": "^1.5.0",
    "astro": "^5.15.6",
    "basic-ftp": "^5.0.5",
    "form-data": "^4.0.5",
    "lucide-react": "^0.554.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "ssh2-sftp-client": "^12.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.1",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.2.0",
    "tsx": "^4.20.6",
    "vitest": "^4.0.10"
  }
}
