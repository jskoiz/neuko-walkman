{
  "name": "pirate-radio",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "generate-playlists": "node scripts/generate-playlists.js",
    "dev": "npm run generate-playlists && concurrently -n \"astro,bot\" -c \"cyan,magenta\" \"lsof -ti:4321 | xargs kill -9 2>/dev/null || true && astro dev\" \"tsx scripts/test-bot-local.ts\"",
    "dev:astro": "lsof -ti:4321 | xargs kill -9 2>/dev/null || true && npm run generate-playlists && astro dev",
    "dev:bot": "tsx scripts/test-bot-local.ts",
    "build": "npm run generate-playlists && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test-bot": "tsx scripts/test-bot-local.ts"
  },
  "dependencies": {
    "@astrojs/react": "^4.4.2",
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "@vercel/analytics": "^1.5.0",
    "astro": "^5.15.6",
    "basic-ftp": "^5.0.5",
    "form-data": "^4.0.5",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "ssh2-sftp-client": "^12.0.1"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "tsx": "^4.20.6"
  }
}
